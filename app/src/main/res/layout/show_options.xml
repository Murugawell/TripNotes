<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/show_options_skip"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutShowOption"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Skip"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/linearLayoutShowOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:backgroundTint="@color/transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/show_options_delete"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="20dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/show_options_update"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="20dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/show_options_swap"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="20dp" />


    </LinearLayout>
</RelativeLayout>