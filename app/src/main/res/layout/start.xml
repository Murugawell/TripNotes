<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageviewcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageviewtrain"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="103dp"
        android:layout_marginStart="103dp"
        android:layout_toEndOf="@+id/startText1"
        android:layout_toRightOf="@+id/startText1"
        android:contentDescription="@string/icon"
        android:src="@drawable/car" />


    <ImageView
        android:id="@+id/imageviewtrain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startText2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/icon"
        android:src="@drawable/train" />

    <TextView
        android:id="@+id/startText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/startText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/startText1"
        android:layout_toRightOf="@+id/startText1" />


</RelativeLayout>